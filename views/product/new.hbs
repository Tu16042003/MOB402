<body class="bg-gradient-primary">

    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">tạo sp</h1>
                            </div>
                            
                            <form class="user" method="post" action="/cpanel/product/new" enctype="multipart/form-data">
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="text" class="form-control form-control-user" placeholder="Name"
                                            name="name">
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="text" class="form-control form-control-user" name="price"
                                            placeholder="Price">
                                    </div>

                                </div>
                                <div class="form-group form-control form-control-user">
                                    <label>Image</label>
                                    <input type="file" name="image">
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="number" class="form-control form-control-user" name="quantity"
                                            placeholder="Quatity">
                                        <div class="form-control form-control-user">
                                            <label>Category</label>
                                            <select name="category">
                                                {{#each category}}
                                                <option value="{{this._id}}">{{this.name}}</option>
                                                {{/each}}
                                            </select>
                                        </div>
                                    </div>

                                </div>

                                <button type="submit" class="btn btn-primary btn-user btn-block">
                                    Lưu
                                </button>
                                <hr>

                            </form>
                            <hr>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>


</body>